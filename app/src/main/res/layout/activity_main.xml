<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_token"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_device_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="-"
                android:visibility="gone"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/device_hash"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_device_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="-"
                app:backgroundTint="@color/blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_hash_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/get_subscriber_details"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_get_attributes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/get_attributes"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add_attributes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/add_attributes"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_set_attributes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/set_attributes"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_remove_attributes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/delete_attributes"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add_profile_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/add_profile_id"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add_segment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/add_segment"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_remove_segment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/delete_segment"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add_dynamic_segment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/add_dynamic_segments"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_send_goal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/sendGoal"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_trigger"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/trigger"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_request_notification_permission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/request_notification_permission"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_get_notification_permission_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/get_notification_permission_status"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_get_subscription_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/get_subscription_status"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_get_subscription_notification_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/get_subscription_notification_status"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_subscribe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/subscribe"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_unsubscribe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/unsubscribe"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_get_subscriber_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:text="@string/get_subscriber_id"
                app:backgroundTint="@color/blue"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_compose_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="40dp"
                android:text="Test ComponentActivity"
                app:backgroundTint="@color/green"
                android:textAllCaps="false" />


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:indeterminate="true"
        android:visibility="gone" />

</RelativeLayout>